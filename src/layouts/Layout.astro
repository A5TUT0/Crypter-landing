---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Crypter â€” Offline, secure password manager",
  description = "Crypter is a 100% offline password manager with strong local encryption and biometrics. Your data, on your device.",
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Icons -->
    <link rel="icon" href="/icon.png" />
    <link rel="apple-touch-icon" href="/icon.png" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/icon.png" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/icon.png" />

    <!-- Brand color -->
    <meta name="theme-color" content="#df9f6a" />

    <!-- Prefer dark on first paint -->
    <script is:inline>
      try {
        const mql = window.matchMedia("(prefers-color-scheme: dark)");
        if (mql.matches) document.documentElement.classList.add("dark");
      } catch {}
    </script>
  </head>

  <body
    class="min-h-dvh bg-slate-950 text-slate-100 antialiased selection:bg-[#df9f6a]/30"
  >
    <!-- soft brandy glow background -->
    <div class="pointer-events-none fixed inset-0 -z-10 opacity-30">
      <div
        class="absolute inset-0 bg-[radial-gradient(60%_50%_at_75%_10%,rgba(223,159,106,.20),transparent_60%)]"
      >
      </div>
      <div
        class="absolute inset-0 bg-[radial-gradient(50%_40%_at_20%_80%,rgba(223,159,106,.12),transparent_60%)]"
      >
      </div>
    </div>
    <slot />
  </body>
</html>
